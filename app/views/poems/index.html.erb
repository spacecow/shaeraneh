<%= title pl(:poem) %>

<%= link_to new(:poem), new_poem_path %>

<% @poemgroups.each do |letter,group| %>
<table>
  <tr>
    <th><%= letter %></th>
  </tr>
  <% group.each do |poem| %>
    <tr>
      <td><%= link_to poem.first_verse, poem %></td>
      <td>
        <%= link_to t(:edit), edit_poem_path(poem) %> <%= link_to t(:del), poem, :confirm => sure?, :method => :delete %>
      </td>
    </tr>
  <% end %>
</table>
<% end %>

<%= link_to new(:poem), new_poem_path %>
