<%= title ft(:login) %>

<%= form_tag sessions_path do %>
  <li>
    <%= label_tag :email, ft(:login) %>
    <%= text_field_tag :email %>
  </li>
  <li>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </li>
  <%= submit_tag ft(:login), :class => :submit %>
<% end %>

<div id="signup">
  <%= mess(:dont_have_an_account?) %>
  <%= button_to jt(:signup), signup_path, :method => :get %>
</div>
