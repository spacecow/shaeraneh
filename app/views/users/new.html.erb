<%= title jt(:signup) %>

<%= semantic_form_for @user do |f| %>
  <%= f.input :userid, label:ft(:userid) %>
  <%= f.input :email, label:ft(:email) %>
  <%= f.input :password, label:ft(:password) %>
  <%= f.input :password_confirmation, label:ft(:confirmation) %>
  <%= f.submit create(:user), :class=>:submit %>
<% end %>
