<div class="word">
  <div id="upper_half">
    <div id="word">
      <div id="base">
        <%= link_to word.name, word_path(word) %>
      </div>
      <div id="forms">
        <%= render word.forms %>
      </div>
    </div>
    <div id="definitions">
      <% word.definitions.each_with_index do |definition,i| %>
        <%= render definition, i:i+1 %>
      <% end %>
    </div>
    <div class="clear"></div>
  </div>
  <%= render 'words/lookups', lookups:word.lookups %>
  <div id="actions">
    <%= link_to t(:edit), edit_word_path(word) if can? :edit, word %>
  </div>
</div>
<div class="clear"></div>
