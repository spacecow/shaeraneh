<div class="word">
  <div id="word">
    <div id="base">
      <%= link_to word.name, edit_word_path(word) %>
    </div>
    <div id="forms">
      <%= render word.forms %>
    </div>
  </div>
  <div id="definitions">
    <% word.definitions.each_with_index do |definition,i| %>
      <%= render definition, i:i+1 %>
    <% end %>
  </div>
</div>
<div class="clear"></div>
